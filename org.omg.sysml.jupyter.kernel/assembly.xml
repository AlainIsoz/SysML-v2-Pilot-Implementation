<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>installer</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
		<!-- Include licence -->
        <fileSet>
            <directory>${project.basedir}/..</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>LICENSE</include>
            </includes>
        </fileSet>
		<!-- Include resources -->
		<fileSet>
			<directory>${project.basedir}/src/main/resources</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>install.py</include>
				<include>**/sysml/**</include>
			</includes>
		</fileSet>
        <!--  Include shaded jar -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/sysml</outputDirectory>
            <includes>
                <include>${project.artifactId}-${project.version}-all.jar</include>
            </includes>
        </fileSet>
		<!-- Include libraries in sysml-->
		<fileSet>
			<directory>${project.basedir}/..</directory>
			<outputDirectory>/sysml</outputDirectory>
			<includes>
				<include>sysml.library/**/*.kerml</include>
				<include>sysml.library/**/*.sysml</include>
			</includes>
		</fileSet>
    </fileSets>
</assembly>